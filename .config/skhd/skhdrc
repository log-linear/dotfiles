ctrl + shift - space : yabai -m space --layout "$(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "stack" else "bsp" end')"

cmd - return : open -na /Applications/iTerm.app/Contents/MacOS/iTerm2

# focus window in bsp mode
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

# swap windows
shift + cmd - h : yabai -m window --warp west
shift + cmd - j : yabai -m window --warp south
shift + cmd - k : yabai -m window --warp north
shift + cmd - l : yabai -m window --warp east

# Make window native fullscreen
cmd - f         : yabai -m window --toggle zoom-fullscreen
shift + cmd - f : yabai -m window --toggle native-fullscreen

# Float / Unfloat window
cmd - space : \
    yabai -m window --toggle float; \
    yabai -m window --toggle border

# Rotate windows clockwise and anticlockwise
cmd - r         : yabai -m space --rotate 270
shift + cmd - r : yabai -m space --rotate 90

# Close window
shift + cmd - q : yabai -m window --close

# Launcher
# cmd - 0x29 : osascript -e 'tell application "System Events" to key code 41 using {command down}'

