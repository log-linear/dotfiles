#=============================== Other settings ================================

include /etc/sway/config.d/*

# Enable numlock on start
input * xkb_numlock enable

# use xwayland
xwayland enable

#----------------------------------- Modes -------------------------------------
# swaynagmode
mode "nag" {
  bindsym {
    Ctrl+d           mode "default"

    Ctrl+c           $nag --exit
    q                $nag --exit
    Escape           $nag --exit
    Ctrl+bracketleft $nag --exit

    Return           $nag --confirm

    Tab              $nag --select prev
    Shift+Tab        $nag --select next

    Left             $nag --select next
    Right            $nag --select prev

    Up               $nag --select next
    Down             $ag --select prev
  }
}

#------------------------- Startup/External programs ---------------------------

# Daemonize foot
exec foot --server

# udiskie - automounting
exec udiskie &

# wlsunset - redshift-esque program
exec wlsunset -S 06:30 -s 20:30

# mullvad
exec mullvad-vpn

# Inactive window transparency
exec --no-startup-id python ~/.local/bin/inactive-window-transparency.py

# Sway Overview
exec rm -f /tmp/sovpipe && mkfifo /tmp/sovpipe && tail -f /tmp/sovpipe | sov

# Network Manager
exec --no-startup-id nm-applet --indicator

# Bluetooth Manager
exec --no-startup-id blueman-applet

# Workspace programs
workspace 1
exec $term
exec $term
exec $browser

workspace 2
exec thunderbird
exec keepassxc

workspace 3
exec discord
exec telegram-desktop
